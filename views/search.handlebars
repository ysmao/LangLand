	<body>
		{{> nav_bar}}

		<div class="main_content">
			<div id="filters_tab">
				<input type="text" class="searchbar" id="users_search" placeholder="Search by username"/>
				<h1>filters</h1>
				<ul id="filters_list">
					<li class="filter">
						<span class="description">Age</span>
						<span>
							min <input type="number" id="min_age">
							max <input type="number" id="max_age">
						</span>
					</li>
					<li class="filter">
						<span class="description">Native Language</span>
						<select id="language_filter">
							<option value="" selected disabled hidden>Select language</option>
							<option value="Chinese">Chinese</option>
							<option value="English">English</option>
						</select>
					</li>
					<li class="filter">
						<span class="description">Proficiency</span>
						<div id="proficiency_slider"></div>
					</li>
					<button id="search_button" onclick="search()">Search</button>
