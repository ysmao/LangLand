{{#equal me user.username}}
	<div class="profile_container">
		<a href="#" class="edit_link">edit profile</a>
	</div>
{{/equal}}

<div class="basic_info">
	<img src="/placeholder.png" alt="{{user.username}}">
	<div class="container">
		<h1 class="username_profile">{{user.username}}</h1>
		<ul class="languages">
			{{#each user.languages as |lang|}}
				{{language_bar lang}}
			{{/each}}
		</ul>
	</div>
</div>

<div class="additional_info">
	<ul class="traits">
		<li>Age: {{user.age}}</li>
		<li>Gender: {{user.gender}}</li>
{{!-- 		<li>Interests:</li>
		<ul class="interests">
			<li>Example</li>
			<li>Example</li>
		</ul> --}}
	</ul>
</div>

{{#equal me user.username}}
{{else}}
	<div class="profile_container">
		<a href="/chats/{{user.username}}">
			<button class="chat_button">Chat</button>
		</a>
	</div>
{{/equal}}